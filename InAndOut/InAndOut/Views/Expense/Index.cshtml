@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Create new Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {



        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Id
                    </th>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Ammount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                <tr>

                    <td width="30%">@expense.ExpenseName</td>
                    <td width="30%">@expense.Amount</td>
                    <td width="40%">
                        <div class="col-6 text-right">
                            <a asp-controller="Expense" asp-action="Update" class="btn btn-primary">Update</a>
                            <a asp-controller="Expense" asp-action="Delete" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Items Created Yet</p>
    }

</div>
